<!DOCTYPE html>
<html>
    <head>
        <title>
            <%= title %>
        </title>
        <link rel="stylesheet" type="text/css" href="/css/home.css">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
    </head>
    <body>
       <div id="main_div">
               <h1 class="main_heading">TODO APP</h1>
               <hr>
               <form action="/add-list" method="POST">
                   <div id="description">
                   <input type="text" name="description" placeholder="Description" id="todo_things">
                 </div>
                 <hr>
                 <div class="second_div">
                     <div class="category">
                         <select name="category" onchange="checkValue(this.value)">
                             <option value="work" selected>work</option>
                             <option value="personal">Personal</option>
                             <option value="office">office</option>
                             <option value="celebrations">celebrations</option>
                             <option value="other">other</option>
                         </select>
                         <input type="text" name="category1" id="other_option" placeholder="What Other?" style="display: none;">
                     </div>
                     <div class="date">
                         <input type="date" name="date" id="to_do_date">
                         </div>
                     </div>
                     <hr>
                     <div class="button">
                        <div class="add_task_button">
                        <button type="submit"><i class="fa fa-plus" aria-hidden="true"></i>Add Task</button>
                        </div>
                       
                    </div>
            
               </form>
               <hr>
               <!-- add task -->
               <form action="/delete-task" method="POST">
                <div class="button">
                <div class="delete_button">
                    <button type="submit">
                      <i class="fas fa-trash-alt" aria-hidden="true"></i>
                        Delete Task
                    </button>
                </div>
            </div>
                   <% for(let i of task_item)
                   {%>
                    <div id="task-details">
                    <div class="checkbox">
                        <input type="checkbox" name="taskitem" value="<%=i._id%>">
                    </div>
                    <div class="details_container">
                        <h4><%= i.description %></h4>
                        <h5><i class="far fa-calendar-alt"></i><%=i.date%></h5>
                     </div>
                     <div class="category_container">
                        <div class="inside_category_container">
                            <h5><%= i.category %></h5>
                        </div>
                    </div>
                </div>
                    <hr>
                   <%}%>
            
                </form> 
       </div>
       <script type="text/javascript" src="javascript/home.js"></script>
    </body>
</html>